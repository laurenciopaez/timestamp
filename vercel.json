{
    "builds": [{ "src": "index.js", "use": "@vercel/node" }],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/index.js" }
    ],
    "routes": [
        {
          "src": "/(.*)\\.js",   
          "dest": "/$1.js"
        },
        {
          "src": "/(.*)\\.json", 
          "dest": "/$1.json"
        },
        {
          "src": "/.*",
          "dest": "index.html"
        }
      ]
  }